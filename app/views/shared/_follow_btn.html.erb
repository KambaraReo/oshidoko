<% if current_user && current_user.following?(user) %>
  <%= link_to "フォロー中", user_relationships_path(user.id), method: :delete, class: "btn btn-unfollow", remote: true %>
<% else %>
  <%= link_to "フォロー", user_relationships_path(user.id), method: :post, class:"btn btn-follow", remote: true %>
<% end %>
