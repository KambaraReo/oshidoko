<% provide(:title, "パスワード再設定") %>
<div class="form-container container">
  <div class="form-row row">
    <div class="title">
      <h3>パスワード再設定</h3>
      <p class="guidance">新しいパスワードを設定してください。</p>
    </div>

    <div class="sign-up-form col-md-8 col-lg-6">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field icon-std">
          <%= f.label :password, "新しいパスワード" %><br>
          <%= f.password_field :password, placeholder: "新しいパスワードを入力", autocomplete: "new-password", class: "password-field" %>
          <span id="password-toggle"><i class="fa-solid fa-eye"></i></span>
          <span class="error-message">
            <% if resource.errors.include?(:password) %>
              <%= resource.errors.full_messages_for(:password).first %>
            <% end %>
          </span>
        </div>

        <div class="field icon-std">
          <%= f.label :password_confirmation, "新しいパスワード（確認）" %><br>
          <%= f.password_field :password_confirmation, placeholder: "新しいパスワード（確認）を入力", autocomplete: "new-password", class: "password-confirmation-field" %>
          <span id="password-confirmation-toggle"><i class="fa-solid fa-eye"></i></span>
          <span class="error-message">
            <% if resource.errors.include?(:password_confirmation) %>
              <%= resource.errors.full_messages_for(:password_confirmation).first %>
            <% end %>
          </span>
        </div>

        <div class="actions">
          <%= f.submit "パスワードを再設定" %>
        </div>

        <div class="log-in-link">
          <%= render "users/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
