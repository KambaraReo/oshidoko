<div class="form-container container">
  <div class="form-row row">
    <h3>ユーザー登録</h3>

    <div class="sign-up-form col-md-8 col-lg-6">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="field required">
          <%= f.label :username, "ユーザー名" %><br>
          <%= f.text_field :username, autofocus: true, placeholder: "ユーザー名を入力" %><br>
          <span class="error-message">
            <% if resource.errors.include?(:username) %>
              <%= resource.errors.full_messages_for(:username).first %>
            <% end %>
          </span>
        </div>

        <div class="field required">
          <%= f.label :email, "メールアドレス" %><br>
          <%= f.email_field :email, placeholder: "メールアドレスを入力", autocomplete: "email" %><br>
          <span class="error-message">
            <% if resource.errors.include?(:email) %>
              <%= resource.errors.full_messages_for(:email).first %>
            <% end %>
          </span>
        </div>

        <div class="field required icon-std">
          <%= f.label :password, "パスワード" %><br>
          <%= f.password_field :password, placeholder: "パスワードを入力", autocomplete: "new-password", class: "password-field" %>
          <span id="password-toggle"><i class="fa-solid fa-eye"></i></span>
          <span class="error-message">
            <% if resource.errors.include?(:password) %>
              <%= resource.errors.full_messages_for(:password).first %>
            <% end %>
          </span>
        </div>

        <div class="field required icon-std">
          <%= f.label :password_confirmation, "パスワード（確認）" %><br>
          <%= f.password_field :password_confirmation, placeholder: "パスワード（確認）を入力", autocomplete: "new-password", class: "password-confirmation-field" %>
          <span id="password-confirmation-toggle"><i class="fa-solid fa-eye"></i></span>
          <span class="error-message">
            <% if resource.errors.include?(:password_confirmation) %>
              <%= resource.errors.full_messages_for(:password_confirmation).first %>
            <% end %>
          </span>
        </div>

        <div class="actions">
          <%= f.submit "アカウントを作成" %>
        </div>

        <div class="log-in-link">
          <%= render "users/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
