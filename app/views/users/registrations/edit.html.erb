<div class="form-container container">
  <div class="form-row edit-account-row row">
    <div class="edit-account-form col-md-10 col-lg-8 col-xl-8">
      <%= link_to mypage_users_path, class: "mypage-link" do %>
        <i class="fa-regular fa-circle-left"></i>
        <div>MY PAGE</div>
      <% end %>
      <h3 class="title">メールアドレス変更</h3>
    </div>

    <div class="edit-account-form col-md-10 col-lg-8 col-xl-8">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <p>変更するメールアドレスを入力してください。</p>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br>
          <%= f.email_field :email, placeholder: "メールアドレスを入力", autocomplete: "email" %><br>
          <span class="error-message">
            <% if resource.errors.include?(:email) %>
              <%= resource.errors.full_messages_for(:email).first %>
            <% end %>
          </span>
        </div>

        <div class="actions">
          <%= f.submit "更新" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
